<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePaypalAccountFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue">

        <Toolbar
            android:id="@+id/tbChangePaypalAccountFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <FrameLayout
        android:id="@+id/frChangePaypalAccountFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_card"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvChangePaypalAccountFragmentPasswordTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/small_margin"
                            android:layout_marginTop="@dimen/small_middle_margin"
                            android:text="@string/password_instruction"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/h3_text"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/etChangePaypalAccountFragmentPasswordMarket"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_middle_margin"
                            android:background="@drawable/shape_edit_text"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:padding="@dimen/small_margin"
                            android:textSize="@dimen/edit_text_size">

                        </EditText>

                        <Button
                            android:id="@+id/bChangePaypalAccountFragmentCheckPassword"
                            android:layout_width="@dimen/middle_width_button"
                            android:layout_height="@dimen/middle_height_button"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/small_margin"
                            android:layout_marginBottom="@dimen/small_margin"
                            android:background="@drawable/shape_secondary_button"
                            android:enabled="true"
                            android:text="@string/check_password"
                            android:textColor="@color/mate_white"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_card"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/small_middle_margin"
                            android:text="@string/market_paypal"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/h2_text"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/etChangePaypalAccountFragmentNewAccount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_middle_margin"
                            android:background="@drawable/shape_edit_text"
                            android:hint="@string/hint_paypal"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/small_margin"
                            android:textSize="@dimen/edit_text_size">

                        </EditText>

                        <Button
                            android:id="@+id/bChangeFingerprintChangeFingerprint"
                            android:layout_width="@dimen/middle_width_button"
                            android:layout_height="@dimen/middle_height_button"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/small_margin"
                            android:layout_marginBottom="@dimen/small_margin"
                            android:background="@drawable/shape_secondary_button"
                            android:enabled="true"
                            android:text="@string/confirm"
                            android:textColor="@color/mate_white"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>