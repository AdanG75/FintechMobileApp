<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".ProfileClientFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/middle_margin"
                android:elevation="@dimen/middle_elevation"
                app:cardCornerRadius="@dimen/small_round_corner">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:text="@string/client_details"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/highlight_text"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_middle_margin"
                        android:text="@string/client_name"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/h2_text"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/etProfileClientName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_middle_margin"
                        android:background="@drawable/shape_edit_text"
                        android:hint="@string/client_name"
                        android:padding="@dimen/small_margin"
                        android:textSize="@dimen/edit_text_size">

                    </EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_middle_margin"
                        android:text="@string/client_lastname"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/h2_text"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/etProfileClientLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_middle_margin"
                        android:background="@drawable/shape_edit_text"
                        android:hint="@string/client_lastname"
                        android:padding="@dimen/small_margin"
                        android:textSize="@dimen/edit_text_size">

                    </EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_middle_margin"
                        android:text="@string/email"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/h2_text"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/etProfileClientEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_middle_margin"
                        android:background="@drawable/shape_edit_text"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/small_margin"
                        android:textSize="@dimen/edit_text_size">

                    </EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_middle_margin"
                        android:text="@string/date_of_birth"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/h2_text"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/etProfileClientDateBirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_middle_margin"
                        android:background="@drawable/shape_edit_text"
                        android:hint="@string/hint_date"
                        android:inputType="date"
                        android:padding="@dimen/small_margin"
                        android:textSize="@dimen/edit_text_size">

                    </EditText>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/middle_margin"
                android:elevation="@dimen/middle_elevation"
                app:cardCornerRadius="@dimen/small_round_corner">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:text="@string/client_address"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/highlight_text"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_middle_margin"
                        android:text="@string/zip_code"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/h2_text"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/etProfileClientZipCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_middle_margin"
                        android:background="@drawable/shape_edit_text"
                        android:hint="@string/hint_zip_code"
                        android:inputType="number"
                        android:padding="@dimen/small_margin"
                        android:textSize="@dimen/edit_text_size">

                    </EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_middle_margin"
                        android:text="@string/state"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/h2_text"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/etProfileClientState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_middle_margin"
                        android:background="@drawable/shape_edit_text"
                        android:hint="@string/state"
                        android:padding="@dimen/small_margin"
                        android:textSize="@dimen/edit_text_size">

                    </EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_middle_margin"
                        android:text="@string/city"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/h2_text"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/etProfileClientCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_middle_margin"
                        android:background="@drawable/shape_edit_text"
                        android:hint="@string/city"
                        android:padding="@dimen/small_margin"
                        android:textSize="@dimen/edit_text_size">

                    </EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_middle_margin"
                        android:text="@string/street"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/h2_text"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/etProfileClientStreet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_middle_margin"
                        android:background="@drawable/shape_edit_text"
                        android:hint="@string/street"
                        android:padding="@dimen/small_margin"
                        android:textSize="@dimen/edit_text_size">

                    </EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_middle_margin"
                        android:text="@string/outside_number"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/h2_text"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/etProfileClientOutsideNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_middle_margin"
                        android:background="@drawable/shape_edit_text"
                        android:hint="@string/outside_number"
                        android:padding="@dimen/small_margin"
                        android:textSize="@dimen/edit_text_size">

                    </EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_middle_margin"
                        android:text="@string/inner_number"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/h2_text"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/etProfileClientInnerNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_middle_margin"
                        android:background="@drawable/shape_edit_text"
                        android:hint="@string/hint_inner_number"
                        android:padding="@dimen/small_margin"
                        android:textSize="@dimen/edit_text_size">

                    </EditText>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/middle_margin"
                android:elevation="@dimen/middle_elevation"
                app:cardCornerRadius="@dimen/small_round_corner">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvProfileClientTitleCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:text="@string/profile_modifying"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/highlight_text"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/tvProfileClientPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvProfileClientTitleCard"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/small_middle_margin"
                        android:layout_marginTop="@dimen/middle_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:text="@string/password"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/h2_text"
                        android:textStyle="bold">

                    </TextView>

                    <Button
                        android:id="@+id/bProfileClientModifyPassword"
                        android:layout_width="@dimen/middle_width_button"
                        android:layout_height="@dimen/middle_height_button"
                        android:layout_below="@id/tvProfileClientTitleCard"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:background="@drawable/shape_disable_button"
                        android:elevation="@dimen/small_margin"
                        android:enabled="true"
                        android:text="@string/modify"
                        android:textColor="@color/mate_white"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/vProfileClientFragmentOne"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/bProfileClientModifyPassword"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/middle_margin"
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_marginEnd="@dimen/middle_margin"
                        android:background="@color/text_color" />

                    <TextView
                        android:id="@+id/tvProfileClientFingerprint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/vProfileClientFragmentOne"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/small_middle_margin"
                        android:layout_marginTop="@dimen/second_middle_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:text="@string/fingerprint_text"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/h2_text"
                        android:textStyle="bold">

                    </TextView>

                    <Button
                        android:id="@+id/bProfileClientModifyFingerprint"
                        android:layout_width="@dimen/middle_width_button"
                        android:layout_height="@dimen/middle_height_button"
                        android:layout_below="@id/vProfileClientFragmentOne"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/small_middle_margin"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:background="@drawable/shape_disable_button"
                        android:elevation="@dimen/small_margin"
                        android:enabled="true"
                        android:text="@string/modify"
                        android:textColor="@color/mate_white"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/vProfileClientFragmentTwo"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/bProfileClientModifyFingerprint"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/middle_margin"
                        android:layout_marginTop="@dimen/small_middle_margin"
                        android:layout_marginEnd="@dimen/middle_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:background="@color/text_color" />

                    <TextView
                        android:id="@+id/tvProfileClientPaypalAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/vProfileClientFragmentTwo"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/small_middle_margin"
                        android:layout_marginTop="@dimen/second_middle_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:text="@string/paypal_account"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/h2_text"
                        android:textStyle="bold">

                    </TextView>

                    <Button
                        android:id="@+id/bProfileClientModifyPaypalAccount"
                        android:layout_width="@dimen/middle_width_button"
                        android:layout_height="@dimen/middle_height_button"
                        android:layout_below="@id/vProfileClientFragmentTwo"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/small_middle_margin"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:background="@drawable/shape_disable_button"
                        android:elevation="@dimen/small_margin"
                        android:enabled="true"
                        android:text="@string/modify"
                        android:textColor="@color/mate_white"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/vProfileClientFragmentThree"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/bProfileClientModifyPaypalAccount"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/middle_margin"
                        android:layout_marginTop="@dimen/small_middle_margin"
                        android:layout_marginEnd="@dimen/middle_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:background="@color/text_color" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/bProfileClientSave"
                android:layout_width="@dimen/big_width_button"
                android:layout_height="@dimen/big_height_button"
                android:layout_marginTop="@dimen/big_middle_margin"
                android:layout_marginBottom="@dimen/big_middle_margin"
                android:background="@drawable/shape_main_button"
                android:enabled="true"
                android:text="@string/save"
                android:textColor="@color/mate_white"
                android:textSize="@dimen/highlight_text"
                android:textStyle="bold">

            </Button>

        </LinearLayout>

    </ScrollView>

</FrameLayout>